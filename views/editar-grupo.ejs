<main class="contenedor contenedor-formularios no-padding">
    <h1><%= nombrePagina %> </h1>

    <form class="default-form" method="post">
        <div class="campo">
            <label>Nombre</label>
            <input type="text" value="<%= grupo.nombre %>" name="nombre" placeholder="Nombre Grupo">
        </div>
        <div class="campo descripcion">
            <label>Descripci√≥n</label>
            <div class="contenedor-editor">
                <input type="hidden" value="<%= grupo.descripcion %>" name="descripcion" id="x">
                <trix-editor input="x"></trix-editor>
            </div>
        </div>
        <div class="campo">
            <label>Categoria</label>
            <select name="categoria">
                <option value="" selected disabled>-- Elije una categoria --</option>
                    <% categorias.forEach(categoria => {  %> 
                        <option 
                        value=<%= categoria.id %>
                        <%= (grupo.categoriaId === categoria.id) ? 'selected' : '' %>
                        >
                        <%= categoria.nombre %> </option>
                    <% }) %> 
            </select>
        </div>
        <div class="campo">
            <label>Sitio Web</label>
            <input type="url"  name="url" placeholder="Sitio Web" value="<%= grupo.url %>">
        </div>
        <div class="campo enviar">
            <input type="submit" value="Guardar Cambios"class="btn btn-rosa">
        </div>
    </form>
</main>